
@model RedSocial.Core.Application.ViewModels.Users.LoginViewModel


<div class="row mb-3 bg-dark">

    <h2 class="text-center nav-link bg-dark text-white fw-bold"> BIENVENIDO A LA MEJOR RED SOCIAL DEL MUNDO </h2>

</div>

<div class="row mb-3 bg-dark">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-dark text-light">
                <h4>INICIAR SESION</h4>
            </div>
            <div class="card-body">

                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                @if (Model.HasError)
                {
                    <div class="alert bg-danger alert-dismissible fade show" role="alert">
                        <p>@Model.Error</p>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form method="post" asp-controller="Users" asp-action="Index">

                    <div class="mb-3">
                        <label class="form-label">Correo</label>
                        <input asp-for="Email" type="text" class="form-control mb-3" />

                    </div>


                    <div class="mb-3">
                        <label class="form-label">Contraseña</label>
                        <input asp-for="Password" type="password" class="form-control mb-3" />

                    </div>


                    <button type="submit" class="btn btn-outline-dark text-black fw-bold mb-3">Iniciar Sesion</button>
                    <a class="btn btn-outline-dark text-black fw-bold  mb-3" asp-controller="Users" asp-action="ForgotPassword">Recuperar Contraseña</a>
                </form>

                No tienes cuenta creada? <a class=" mb-3" href="/Users/Register"> haga click para registrarse</a>
                

            </div>
            
        </div>
    </div>
</div>

